{
  "manifest_version": 3,
  "name": "DOI Citation Fetcher",
  "version": "1.1",
  "description": "Fetch citations for DOIs and PMIDs in the style you choose.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://citation.doi.org/*",
    "https://eutils.ncbi.nlm.nih.gov/*",
    "<all_urls>"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
